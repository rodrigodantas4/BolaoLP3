<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">
		   
	 <TableRow 
        android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left"
    	android:layout_marginBottom="30px">
   	
		<Button
	        android:id="@+id/settings"
	        android:background="@drawable/ic_launcher"
	        android:layout_height="100px"
			android:layout_width="100px" 
			android:layout_centerHorizontal="true"/>
    	
		<TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Large Text"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
   	
	 </TableRow>
	
     <TableRow 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal">

         <Button
             android:id="@+id/settings"
             android:layout_width="120px"
             android:layout_height="120px"
             android:background="@drawable/bola" 
             android:layout_marginLeft="80px"/>
	    
	    <Button
	        android:id="@+id/settings"
	        android:background="@drawable/estatistica"
	        android:layout_height="120px"
			android:layout_width="120px" 
			android:layout_column="2"
			android:layout_marginRight="80px"
			android:onClick="entrarTabela"/>
	    
	 </TableRow>
	 
      <TableRow 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_marginBottom="30px">

        <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nome"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:layout_marginLeft="80px"/>
        
        <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Tabela"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:layout_column="2"
	        android:layout_marginRight="80px"/>
	    
	 </TableRow>
	 
     <TableRow 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal">

         <Button
             android:id="@+id/settings"
             android:layout_width="120px"
             android:layout_height="120px"
             android:background="@drawable/times" 
             android:layout_marginLeft="80px"
             android:onClick="entrarTimes"/>
	    
	    <Button
	        android:id="@+id/settings"
	        android:background="@drawable/calendario"
	        android:layout_height="120px"
			android:layout_width="120px" 
			android:layout_column="2"
			android:layout_marginRight="80px"
			android:onClick="entrarJogos"/>
	    
	 </TableRow>
	 
      <TableRow 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal">

        <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Times"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:layout_marginLeft="80px"/>
        
        <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Jogos"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:layout_column="2"
	        android:layout_marginRight="80px"
	        android:layout_marginBottom="30px"
	        />
	    
	 </TableRow>
	 
	 
     <TableRow 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="left">

         <Button
             android:id="@+id/settings"
             android:layout_width="100px"
             android:layout_height="100px"
             android:background="@drawable/help"
             android:onClick="entrarAjuda" />
         
      </TableRow>
      
         <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Ajuda"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:layout_marginLeft="50px"/>
	    
	 
	 
</TableLayout>
       
       


